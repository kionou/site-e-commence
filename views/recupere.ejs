                <% if (typeof user !="undefined" && user.date_update) { %>
                    <input type="hidden" value=" <%= user.date_update %>" name="date_update">
                <% }%>
                          
                <div class="container-passe">
                    <p>kionoumamadou.00@gmail.com</p>
