           <form action="/recuperer" method="post">
                <% if (typeof user !="undefined" && user.id) { %>
                    <input type="hidden" value=" <%= user.id %>" name="id">   
                <% }%>

                <% if (typeof user !="undefined" && user.nom) { %>
                    <input type="hidden" value=" <%= user.nom %>" name="nom">
